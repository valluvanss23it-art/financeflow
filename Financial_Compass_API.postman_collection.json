{
  "info": {
    "_postman_id": "financial-compass-api",
    "name": "Financial Compass API",
    "description": "API collection for Financial Compass Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Test User\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      },
      "response": []
    },
    {
      "name": "2. Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "3. Add Transaction (Income)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer YOUR_JWT_TOKEN_HERE",
            "description": "Copy the token from Login response"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"income\",\n  \"amount\": 5000,\n  \"category\": \"salary\",\n  \"source\": \"Monthly Salary\",\n  \"description\": \"January salary payment\",\n  \"date\": \"2026-02-04\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/transactions",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "transactions"
          ]
        }
      },
      "response": []
    },
    {
      "name": "3b. Add Transaction (Expense)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer YOUR_JWT_TOKEN_HERE",
            "description": "Copy the token from Login response"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"expense\",\n  \"amount\": 250,\n  \"category\": \"groceries\",\n  \"merchant\": \"Whole Foods\",\n  \"description\": \"Weekly grocery shopping\",\n  \"payment_method\": \"credit_card\",\n  \"date\": \"2026-02-04\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/transactions",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "transactions"
          ]
        }
      },
      "response": []
    },
