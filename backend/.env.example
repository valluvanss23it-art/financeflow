PORT=5000
NODE_ENV=development

# MongoDB Configuration (optional - only needed if not using MySQL exclusively)
MONGODB_URI=mongodb://localhost:27017/financial_compass

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production_at_least_32_chars
JWT_EXPIRE=7d

# MySQL Configuration (Local Development)
USE_MYSQL=true
USE_DUAL_STORAGE=false
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=financial_compass

# AWS RDS Configuration (Cloud/Production)
USE_AWS_RDS=false
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=3306
DB_USER=admin
DB_PASS=your-secure-password
DB_NAME=financial_compass
DB_SSL_REJECT_UNAUTHORIZED=true

# AWS DynamoDB Configuration (Optional)
AWS_REGION=us-east-1
DYNAMODB_TABLE_NAME=financial-compass-data

# News API Configuration
# Get your free API key from https://newsapi.org
NEWS_API_KEY=your_news_api_key_here

# Automatic news update interval (in minutes)
NEWS_UPDATE_INTERVAL=60